{
    "plugs": [
        {
            "name": "Get Packages",
            "url": "https://yourbackend.com/api/packages",
            "method": "GET",
            "headers": {},
            "response_mapping": {
                "packages": "$.packages"
            }
        },
        {
            "name": "Create Lead",
            "url": "https://yourbackend.com/api/create-lead",
            "method": "POST",
            "headers": {
                "Content-Type": "application/json"
            },
            "payload": {
                "name": "${visitor_name}",
                "email": "${visitor_email}",
                "phone": "${visitor_phone}",
                "package_name": "${selected_package}"
            }
        },
        {
            "name": "Generate Invoice",
            "url": "https://yourbackend.com/api/generate-invoice",
            "method": "POST",
            "headers": {
                "Content-Type": "application/json"
            },
            "payload": {
                "name": "${visitor_name}",
                "email": "${visitor_email}",
                "phone": "${visitor_phone}",
                "package_name": "${selected_package}",
                "amount": "${amount}"
            }
        },
        {
            "name": "AI Suggest",
            "url": "https://yourbackend.com/api/ai-suggest",
            "method": "POST",
            "headers": {
                "Content-Type": "application/json"
            },
            "payload": {
                "query": "${user_query}"
            }
        }
    ]
}